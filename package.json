{
  "name": "zhidianrollcall",
  "version": "4.5.1",
  "description": "智点课堂随机点名工具",
  "author": "日有所思 <thinks365@163.com>",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.zhidian.rollcall",
    "productName": "智点 随机点名",
    "extends": null,
    "asar": true,
    "files": [
      "**/*",
      "!node_modules/{.bin,babel*,electron-rebuild,esbuild,tsc,typescript}/**"
    ],
    "asarUnpack": [
      "**/node_modules/electron-store/**"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "icon": "icon.png"
    },
    "linux": {
      "icon": "icon.png"
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^25.1.8"
  }
}
